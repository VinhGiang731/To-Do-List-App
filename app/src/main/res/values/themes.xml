<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoList" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- res/values/themes.xml -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Base.Theme.ToDoList</item>
    </style>

    <!-- styles.xml -->
    <style name="make_yourse">
        <item name="android:textSize">30sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!--    style for calendar view-->
    <style name="StyleTextAppearanceStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="StyleDateTextAppearanceStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CalendarViewTitle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!--    text style for new schedule-->
<!--    new task: repair design style for row table and edit text in activity_schedule-->

    <style name="textStyleNewSchedule" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">14sp</item>
        <item name="android:paddingStart">14sp</item>
    </style>

    <style name="tableRowStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:paddingStart">8sp</item>
        <item name="android:layout_marginStart">14sp</item>
        <item name="android:layout_marginEnd">14sp</item>
    </style>
</resources>